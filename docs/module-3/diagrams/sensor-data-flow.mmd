```mermaid
graph LR
    subgraph "Sensor Layer"
        Cam[Camera<br/>Raw Images]
        Lidar[LiDAR<br/>Raw Point Cloud]
        Imu[IMU<br/>Raw Acceleration/Gyro]
        Gps[GPS<br/>Raw Position Data]
        Radar[Radar<br/>Raw RF Data]
    end

    subgraph "Preprocessing Layer"
        CamPre[Camera Preprocessing<br/>- Rectification<br/>- Denoising<br/>- Undistortion]
        LidarPre[LiDAR Preprocessing<br/>- Outlier Removal<br/>- Ground Segmentation<br/>- Motion Compensation]
        ImuPre[IMU Preprocessing<br/>- Bias Correction<br/>- Temperature Compensation<br/>- Integration]
        GpsPre[GPS Preprocessing<br/>- Coordinate Conversion<br/>- Differential Correction<br/>- Outlier Filtering]
        RadarPre[Radar Preprocessing<br/>- Clutter Filtering<br/>- CFAR Detection<br/>- Azimuth/Elevation Processing]
    end

    subgraph "Synchronization & Calibration"
        Sync[Temporal Synchronization<br/>Timestamp Alignment]
        Calib[Spatial Calibration<br/>Extrinsic Parameters]
    end

    subgraph "Feature Extraction"
        CamFeat[Camera Features<br/>- Keypoints<br/>- Descriptors<br/>- Optical Flow]
        LidarFeat[LiDAR Features<br/>- Normals<br/>- Curvature<br/>- Local Descriptors]
        FusionFeat[Multimodal Features<br/>- Cross-modal Associations<br/>- Joint Representations]
    end

    subgraph "Perception Algorithms"
        Det[Object Detection<br/>2D/3D Bounding Boxes]
        Seg[Semantic Segmentation<br/>Pixel/Point Labels]
        Track[Object Tracking<br/>Trajectory Estimation]
        SLAM[SLAM<br/>Mapping & Localization]
    end

    subgraph "Fusion Layer"
        EarlyFusion[Early Fusion<br/>Raw Data Level]
        MidFusion[Mid Fusion<br/>Feature Level]
        LateFusion[Late Fusion<br/>Decision Level]
        StateFusion[State Fusion<br/>Kalman/PF Filtering]
    end

    subgraph "Output Layer"
        Objects[Detected Objects<br/>Class, Pose, Velocity]
        Scene[Scene Understanding<br/>Layout, Semantics]
        Map[Occupancy Grid/<br/>Point Cloud Map]
        State[Robot State<br/>Pose, Velocity, etc.]
    end

