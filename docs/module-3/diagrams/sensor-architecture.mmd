graph TB
    subgraph "Robot Platform"
        Robot[Robot Chassis]

        subgraph "Sensing Modalities"
            Cam[Camera<br/>RGB/Stereo/RGB-D]
            Lidar[LiDAR<br/>3D/2D]
            Imu[IMU<br/>Accelerometer<br/>Gyroscope<br/>Magnetometer]
            Radar[Radar<br/>Radio Waves]
            Gps[GPS<br/>Global Positioning]
            Sonar[Sonar<br/>Ultrasonic]
        end

        subgraph "Sensor Processing Units"
            CamProc[Camera Processing<br/>- Image Enhancement<br/>- Feature Extraction<br/>- Object Detection]
            LidarProc[LiDAR Processing<br/>- Point Cloud Filtering<br/>- Ground Segmentation<br/>- Object Detection]
            ImuProc[IMU Processing<br/>- Bias Correction<br/>- Attitude Estimation<br/>- Preintegration]
            RadarProc[Radar Processing<br/>- Clutter Filtering<br/>- CFAR Detection<br/>- Tracking]
            GpsProc[GPS Processing<br/>- Position Filtering<br/>- RTK Correction<br/>- Coordinate Conversion]
            SonarProc[Sonar Processing<br/>- Echo Detection<br/>- Range Estimation<br/>- Obstacle Detection]
        end
    end

    subgraph "Perception System"
        subgraph "Data Preprocessing"
            Sync[Temporal Synchronization]
            Calib[Spatial Calibration]
            Fusion[Data Level Fusion]
        end

        subgraph "Perception Algorithms"
            Det[Object Detection]
            Track[Multi-Object Tracking]
            Seg[Semantic Segmentation]
            SLAM[SLAM/Mapping]
        end

        subgraph "Fusion Engine"
            StateEst[State Estimation<br/>EKF/UKF/PF]
            DataAssoc[Data Association]
            TrackMaint[Track Management]
        end
    end

    subgraph "Output Modules"
        ObjDetOut[Object Detection<br/>Output]
        TrackedOut[Tracked Objects<br/>Output]
        MapOut[Map Output]
        StateOut[Robot State<br/>Output]
    end

    %% Sensor connections to processing units
    Cam --> CamProc
    Lidar --> LidarProc
    Imu --> ImuProc
    Radar --> RadarProc
    Gps --> GpsProc
    Sonar --> SonarProc

    %% Processing units to perception system
    CamProc --> Sync
    LidarProc --> Sync
    ImuProc --> Sync
    RadarProc --> Sync
    GpsProc --> Sync
    SonarProc --> Sync

    %% Data flow within perception system
    Sync --> Calib
    Calib --> Fusion
    Fusion --> Det
    Fusion --> Track
    Fusion --> Seg
    Fusion --> SLAM

    Det --> StateEst
    Track --> StateEst
    SLAM --> StateEst

    StateEst --> DataAssoc
    DataAssoc --> TrackMaint

    %% Output connections
    Det --> ObjDetOut
    Track --> TrackedOut
    SLAM --> MapOut
    StateEst --> StateOut

    %% Robot platform connection
    Robot --> Cam
    Robot --> Lidar
    Robot --> Imu
    Robot --> Radar
    Robot --> Gps
